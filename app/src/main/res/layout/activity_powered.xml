<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizme.PoweredActivity">

    <TextView
        android:id="@+id/text_powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powered by"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_above="@+id/special_project_image"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/special_project_image"
        android:layout_margin="40dp"
        android:src="@drawable/spg"
        android:layout_width="190dp"
        android:layout_height="190dp" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/special_project_image"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
