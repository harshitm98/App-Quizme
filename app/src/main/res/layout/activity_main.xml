<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizme.MainActivity">

    <LinearLayout
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="8dp"
            android:id="@+id/imageView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/quiz_me_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="45sp"
                android:text="Quiz Me"
                android:layout_marginTop="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Created by: Harshit Maheshwari\nCreated for: Elangovan D\nv1.0"
                 />

        </LinearLayout>





    </LinearLayout>







    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/registration_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:hint="@string/registratin_number"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:layout_centerHorizontal="true"
            android:inputType="textCapCharacters" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floating_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/floating_reg">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name"
            android:textColor="@android:color/white"
            android:layout_marginLeft="52dp"
            android:layout_marginRight="52dp"
            android:layout_centerHorizontal="true"
            android:inputType="textCapWords"/>

    </android.support.design.widget.TextInputLayout>






    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/next_activity"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:text="Start the test"/>

        <Button
            android:id="@+id/scanner"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_margin="8dp"
            android:background="@drawable/button_bg"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan qr"/>

    </LinearLayout>



</RelativeLayout>
