<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/complete_layout"
    tools:context="com.example.android.quizme.FinalResultActivity">

    <TextView
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/questions_solved_result"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Your score is: "/>

    <TextView
        android:id="@+id/questions_solved_result"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="45sp"
        android:background="@drawable/magnitude_circle"
        android:gravity="center"
        tools:text="9" />

    <TextView
        android:id="@+id/feedback"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Would like to get back to team?\n For feedback click here!"/>


</RelativeLayout>
